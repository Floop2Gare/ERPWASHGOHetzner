# Exemple de configuration Nginx (remplacer les placeholders)
# Fichier: /etc/nginx/sites-available/erp.conf

server {
    listen 80;
    server_name votre-domaine.tld;  # À remplacer

    # Frontend (build Vite)
    root /srv/erp/FRONT-END-ERP/FRONT-END-ERP/dist;
    index index.html;

    location /api/ {
        proxy_pass http://127.0.0.1:8000/;  # Backend FastAPI via PM2
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        try_files $uri /index.html;
    }
}

# Après Certbot, un bloc server en 443 (HTTPS) sera géré/ajouté automatiquement.
